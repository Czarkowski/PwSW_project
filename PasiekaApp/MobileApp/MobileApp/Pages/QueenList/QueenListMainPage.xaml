<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:MobileApp.Pages.QueenList.Views"
             x:Class="MobileApp.Pages.QueenListMainPage" >
    <!--AutomationProperties.IsInAccessibleTree="True"-->
    <ContentPage.Resources>
        <ResourceDictionary>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ScrollView Grid.Row="0">
                <StackLayout>
                    <!-- Lista, która może być przewijana -->
                    <views:QueenList x:Name="QueenListView" SelectionChanged="OnQueenSelectionChanged"/>
                </StackLayout>
            </ScrollView>

            <!-- Stałe przyciski na dole strony -->
            <StackLayout Grid.Row="1" Orientation="Vertical" HorizontalOptions="FillAndExpand">
                <Button Text="Nowa Matka" Clicked="OnAddQueenClicked" />
            </StackLayout>
        </Grid>
        
    </ContentPage.Content>
</ContentPage>
