<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:MobileApp.Pages"
             xmlns:converters="clr-namespace:MobileApp.Converters"
             xmlns:customControls="clr-namespace:MobileApp.Controls.CustomControls"
             xmlns:compositeControls="clr-namespace:MobileApp.Controls.CompositeControls"
             x:Class="MobileApp.Pages.HiveListMainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:QueenAgeConverter x:Key="QueenAgeConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>

        <StackLayout>
            <Button Text="Add Item" Clicked="OnAddItemClicked" />

            <!--<ListView x:Name="itemsCollectionView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10" Orientation="Horizontal" Spacing="20" SelectionMode="Single" SelectionChanged="OnItemSelected">
                                --><!--<Label Text="{Binding Id}" FontAttributes="Bold"/>--><!--
                                <Label Text="{Binding Number}" FontAttributes="Bold" />
                                <Label Text="{Binding Race}" />
                                <Label Text="{Binding Description}" />
                                --><!--<Label Text="{Binding DataPoddaniaMatki, StringFormat='{0:yyyy-MM-dd}'}" />--><!--
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>-->

            <!-- Lista elementów -->
            <CollectionView x:Name="ulListModel" ItemsLayout="VerticalList" SelectionMode="Single" SelectionChanged="OnItemSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10" BorderColor="LightGray">
                            <StackLayout Orientation="Horizontal" Spacing="20">
                                <Label Text="{Binding Number}" FontAttributes="Bold" />
                                <Label Text="{Binding Race}" />
                                <Label Text="{Binding Description}" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


            <!-- Panel szczegółów -->
            <StackLayout x:Name="ulDetailsModel" IsVisible="False" Padding="10" Spacing="10">
                <Label Text="Szczegóły" FontAttributes="Bold" FontSize="Medium" />

                <!-- Id -->
                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Label Text="Id:" VerticalOptions="Center" />
                    <Entry Text="{Binding Id}" IsEnabled="False" />
                </StackLayout>

                <!-- Numer -->
                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Label Text="Numer:" VerticalOptions="Center" />
                    <customControls:IntegerEntry Text="{Binding Number}" IsEnabled="True"/>
                </StackLayout>
                
                <!--<StackLayout Orientation="Horizontal" Spacing="5">
                    <Entry Text="{Binding Number}" IsEnabled="True" />
                </StackLayout>-->

                <!-- Matka Pszczela Id -->
                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Label Text="Opis Ula:" VerticalOptions="Center" />
                    <Entry Text="{Binding Description}" IsEnabled="True" />
                </StackLayout>

                <!-- Data Poddania Matki -->
                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Label Text="Data Poddania Matki:" VerticalOptions="Center" />
                    <DatePicker Date="{Binding QueenAddDate}" IsEnabled="True" />
                </StackLayout>

                <!-- Czy Odklad -->
                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Label Text="Wiek Matki:" VerticalOptions="Center" />
                    <Label Text="{Binding QueenAge, Converter={StaticResource QueenAgeConverter}}" VerticalOptions="Center" />
                </StackLayout>

                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Label Text="Opis Matki:" VerticalOptions="Center" />
                    <Entry Text="{Binding QueenDescription}" VerticalOptions="Center" IsEnabled="True" />
                </StackLayout>
                
                <!-- Przycisk zapisz -->
                <Button Text="Zapisz zmiany" Clicked="OnSaveChangesClicked" />
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>