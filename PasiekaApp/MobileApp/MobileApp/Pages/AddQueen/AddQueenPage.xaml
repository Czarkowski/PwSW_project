<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cc="using:MobileApp.Controls.CompositeControls"
             xmlns:viewModels="using:MobileApp.ViewModels"
             xmlns:sr="clr-namespace:MobileApp.Helpers.StaticResources"
             x:Class="MobileApp.Pages.AddQueenPage"
             x:DataType="viewModels:QueenDetailsVM">
    
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Dodaj Nową Matkę" FontSize="24" FontAttributes="Bold" />
            <cc:CustomPicker LabelText="Rasa:" SelectedItem="{Binding Race, Mode=TwoWay}" OptionList="{StaticResource {x:Static sr:StaticResourceKeys.AvailableRaces}}" DisplayProperty="Name" />
            <cc:LabelEntry LabelText="Opis:" EntryText="{Binding Description, Mode=TwoWay}" />
            
            <cc:CustomDatePicker x:Name="DatePicker" LabelText="Data Urodzenia:" SelectedDate="{Binding BirthDate, Mode=TwoWay}"/>

            <StackLayout Orientation="Horizontal" Spacing="10">
                <Button Text="Zapisz" Clicked="OnSaveClicked" />
                <Button Text="Anuluj" Clicked="OnCancelClicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
