<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:MobileApp.Pages.Review.History.Views"
             xmlns:vm="clr-namespace:MobileApp.ViewModels"
             x:Class="MobileApp.Pages.ReviewHistoryMainPage"
             x:DataType="vm:ReviewHistoryVM"
             x:Name="this"
             BindingContext="{Binding ReviewHistoryVM, Source={RelativeSource Self}}"
             Title="ReviewHistoryMainPage">
    <StackLayout Orientation="Vertical">
        <StackLayout x:Name="FilterSL" Orientation="Vertical" BindingContext="{Binding ReviewListFilterVM}" >
            <views:ReviewHistoryListFilterView OnSearch="{Binding OnSearch,Source={x:Reference this}}"/>
        </StackLayout>
        <!-- Główna zawartość strony -->
        <CollectionView x:Name="ReviewListCV" ItemsSource="{Binding ReviewHistoryListVM.ReviewHistoryListItemVMs}" 
                        ItemTemplate="{StaticResource ReviewListDataTemplateSelector}" SelectionMode="Single" SelectedItem="{Binding ReviewHistoryListVM.SelectedItem}" 
                        SelectionChanged="OnItemSelected">
        </CollectionView>
    </StackLayout>
</ContentPage>