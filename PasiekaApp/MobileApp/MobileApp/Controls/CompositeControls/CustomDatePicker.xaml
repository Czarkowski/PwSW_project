<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Controls.CompositeControls.CustomDatePicker"
             xmlns:local="clr-namespace:MobileApp.Controls.CompositeControls"
             xmlns:pi="using:MobileApp.PickerItems.Interfaces"
             x:DataType="local:CustomDatePicker"
             x:Name="this">
    <StackLayout Orientation="Vertical" Spacing="10">
        <Label x:Name="Label" FontAttributes="Bold" Text="{Binding LabelText, Source={x:Reference this}}"/>
        <DatePicker x:Name="Picker" Date="{Binding SelectedDate, Source={x:Reference this}}"/>
    </StackLayout>
</ContentView>
