<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MobileApp.Controls.CompositeControls"
             x:Class="MobileApp.Controls.CompositeControls.LabelEntry"
             x:DataType="local:LabelEntry"
             x:Name="this">
    
    <StackLayout Orientation="Vertical" Spacing="5">
        <!--<Label Text="{Binding LabelText, Source={RelativeSource AncestorType={x:Type local:LabelEntry}}}" 
               VerticalOptions="Center" />
        <Entry Text="{Binding EntryText, Source={RelativeSource AncestorType={x:Type local:LabelEntry}}}"
               VerticalOptions="Center" />-->
        <!--Text="{Binding EntryText}"
               Text="{Binding LabelText}"-->

        <Label x:Name="Label" 
               Text="{Binding LabelText, Source={x:Reference this}}"
               HorizontalOptions="Start" />
        <Entry  x:Name="Entry"
                Text="{Binding EntryText, Source={x:Reference this}}"
               VerticalOptions="StartAndExpand" />
    </StackLayout>
</ContentView>