<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Pages.Review.List.Templates.NewContent1">
    <VerticalStackLayout>
        <Frame Margin="5" Padding="10" BorderColor="LightGray">
            <StackLayout Orientation="Horizontal" Spacing="20">
                <Label Text="{Binding ReviewType.Name}" FontAttributes="Bold" />
                <Label Text="{Binding PlannedDate, StringFormat='{0:dd-MM-yyyy}'}" />
                <Label Text="{Binding ReviewDescription}" />
                <Label Text="{Binding RealizedDate, StringFormat='{0:dd-MM-yyyy}'}">
                </Label>
            </StackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentView>
