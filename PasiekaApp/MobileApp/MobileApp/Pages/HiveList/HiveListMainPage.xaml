<?xml version="1.0" encoding="utf-8" ?>
<core:ScrollablePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:MobileApp.Pages"
             xmlns:converters="clr-namespace:MobileApp.Converters"
             xmlns:customControls="clr-namespace:MobileApp.Controls.CustomControls"
             xmlns:cc="clr-namespace:MobileApp.Controls.CompositeControls"
             xmlns:core="clr-namespace:MobileApp.Core.BasePages;assembly=MobileApp.Core"
             xmlns:vm="using:MobileApp.ViewModels"             
             x:Class="MobileApp.Pages.HiveListMainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:QueenAgeConverter x:Key="QueenAgeConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>

        <StackLayout>
            <Button Text="Add Hive" Clicked="OnAddItemClicked" />

            <CollectionView x:Name="UlListModel" ItemsLayout="VerticalList" SelectionMode="Single" SelectionChanged="OnItemSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10" BorderColor="LightGray">
                            <StackLayout Orientation="Horizontal" Spacing="20">
                                <Label Text="{Binding Number}" FontAttributes="Bold" />
                                <Label Text="{Binding Race}" />
                                <Label Text="{Binding Description}" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <StackLayout x:Name="UlDetailsModel" x:DataType="vm:HiveDetailsVM" IsVisible="False" Padding="10" Spacing="10">
                <Label Text="Szczegóły" FontAttributes="Bold" FontSize="Medium" />

                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Label Text="Numer:" VerticalOptions="Center" />
                    <customControls:IntegerEntry Text="{Binding Number}" IsEnabled="False"/>
                </StackLayout>


                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Label Text="Opis Ula:" VerticalOptions="Center" />
                    <Entry Text="{Binding Description}" IsEnabled="True" />
                </StackLayout>
                
                <Button Text="Change Queen" Clicked="OnChangeQueenClicked" />
                
                <StackLayout Orientation="Horizontal" Spacing="5">
                    <cc:LabelEntry LabelText="Rasa:" EntryText="{Binding BeeQueen.Rasa.Nazwa}" />
                </StackLayout>
                
                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Label Text="Data Poddania Matki:" VerticalOptions="Fill" />
                    <DatePicker Date="{Binding QueenAddDate}" IsEnabled="True" VerticalOptions="Fill"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Label Text="Wiek Matki:" VerticalOptions="Center" />
                    <Label Text="{Binding QueenAge, Converter={StaticResource QueenAgeConverter}}" VerticalOptions="Center" />
                </StackLayout>

                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Label Text="Opis Matki:" VerticalOptions="Center" />
                    <Entry Text="{Binding QueenDescription}" VerticalOptions="Fill" IsEnabled="True" />
                </StackLayout>
                
                <!-- Przycisk zapisz -->
                <Button Text="Save" Clicked="OnSaveChangesClicked" />
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</core:ScrollablePage>