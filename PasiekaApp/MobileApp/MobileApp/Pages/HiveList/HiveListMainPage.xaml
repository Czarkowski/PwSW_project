<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:MobileApp.Pages"
             xmlns:converters="clr-namespace:MobileApp.Converters"
             xmlns:cc="clr-namespace:MobileApp.Controls.CompositeControls"
             xmlns:core="clr-namespace:MobileApp.Core.BasePages;assembly=MobileApp.Core"
             xmlns:loc="clr-namespace:MobileApp.Localizations"
             xmlns:vm="using:MobileApp.ViewModels"   
             x:DataType="vm:HiveListMainVM"
             BindingContext="{Binding HiveListMainVM, Source={RelativeSource Self}}"
             x:Class="MobileApp.Pages.HiveListMainPage"
             Title="{loc:Translate txt_HiveListMainPageTitle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Button Text="{loc:Translate txt_AddHive}" Clicked="OnAddItemClicked" Grid.Row="0"/>

        <CollectionView x:Name="UlListModel" ItemsSource="{Binding HiveListVM.HiveListItemVMs}" SelectedItem="{Binding HiveListVM.SelectedItem}" 
                        ItemsLayout="VerticalList" SelectionMode="Single" SelectionChanged="OnItemSelected" Grid.Row="1" BackgroundColor="Black">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:HiveListItemVM">
                    <Frame Margin="5" Padding="5" BackgroundColor="Black" BorderColor="LightGray" HorizontalOptions="FillAndExpand" MinimumHeightRequest="50" InputTransparent="True">
                        <!--<Grid ColumnDefinitions="Auto,Auto,*" VerticalOptions="Center" HorizontalOptions="FillAndExpand" >
                            <Label Text="{Binding Number}" TextColor="White" FontAttributes="Bold" Grid.Column="0" VerticalOptions="Center" InputTransparent="True"/>
                            <Label Text="{Binding Race}" TextColor="White" Grid.Column="1" VerticalOptions="Center" InputTransparent="True"/>
                            <Label Text="{Binding Description}" TextColor="White" Grid.Column="2" VerticalOptions="Center" InputTransparent="True"/>
                        </Grid>-->
                        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                            <Label Text="{Binding Number}" TextColor="White" FontAttributes="Bold" HorizontalOptions="Start" VerticalOptions="Center"/>
                            <Label Text="{Binding Race}" TextColor="White" HorizontalOptions="Start" VerticalOptions="Center" />
                            <Label Text="{Binding Description}" TextColor="White" HorizontalOptions="Start" VerticalOptions="Center" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <StackLayout IsVisible="{Binding HiveDetailsVM, Converter={StaticResource NullToBooleanConverter}, TargetNullValue='false'}" Grid.Row="2">

            <StackLayout x:Name="UlDetailsModel" x:DataType="vm:HiveDetailsVM" BindingContext="{Binding HiveDetailsVM}"  Padding="10" Spacing="10">
                <Label Text="Szczegóły" FontAttributes="Bold" FontSize="Medium" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>

                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Label Text="Numer:" VerticalOptions="Center" />
                    <cc:IntegerEntry Text="{Binding Number}" IsEnabled="True" Unfocused="OnEntryUnfocused"/>
                </StackLayout>


                <StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Spacing="5">
                    <Label Text="Opis Ula:" VerticalOptions="Center" />
                    <Entry Text="{Binding Description}" IsEnabled="True" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Unfocused="OnEntryUnfocused"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal">
                    <Button Text="{loc:Translate txt_AddQueen}" IsVisible="{Binding HasQueen_N}" Clicked="OnAddQueenClicked" HorizontalOptions="FillAndExpand" Margin="5"/>
                    <Button Text="{loc:Translate txt_RemoveQueen}" IsVisible="{Binding HasQueen}" Clicked="OnRemoveQueenClicked" HorizontalOptions="FillAndExpand" Margin="5"/>
                    <Button Text="{loc:Translate txt_RemoveHive}" IsVisible="{Binding HasQueen_N}" Clicked="OnRemoveHiveClicked" HorizontalOptions="FillAndExpand" Margin="5"/>
                    <Button Text="{loc:Translate txt_HiveReviewHistory}" IsVisible="True" Clicked="OnHiveReviewHistoryClicked" HorizontalOptions="FillAndExpand" Margin="5"/>
                </StackLayout>

                <StackLayout IsVisible="{Binding HasQueen}">

                    <StackLayout Orientation="Horizontal" Spacing="5" IsEnabled="False">
                        <cc:LabelEntry LabelText="Rasa:" EntryText="{Binding BeeQueen.Race.Name}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="5" IsEnabled="False">
                        <Label Text="Data Poddania Matki:" VerticalOptions="Fill" />
                        <DatePicker Date="{Binding QueenAddDate}" IsEnabled="True" VerticalOptions="Fill"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="5" IsEnabled="False">
                        <Label Text="Wiek Matki:" VerticalOptions="Center" />
                        <Label Text="{Binding QueenAge, Converter={StaticResource QueenAgeConverter}}" VerticalOptions="Center" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="5" >
                        <Label Text="Opis Matki:" VerticalOptions="Center" />
                        <Entry Text="{Binding QueenDescription}" VerticalOptions="Fill" IsEnabled="False" />
                    </StackLayout>

                </StackLayout>
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>