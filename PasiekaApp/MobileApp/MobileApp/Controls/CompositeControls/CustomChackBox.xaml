<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MobileApp.Controls.CompositeControls"
             x:Class="MobileApp.Controls.CompositeControls.CustomChackBox"
             x:DataType="local:CustomChackBox"
             x:Name="this">
    <StackLayout Orientation="Vertical">
        <Label x:Name="Label" Text="{Binding LabelText, Source={x:Reference this}}" />
        <CheckBox x:Name="CheckBox" IsChecked="{Binding IsChecked, Source={x:Reference this}}" />
    </StackLayout>
</ContentView>
