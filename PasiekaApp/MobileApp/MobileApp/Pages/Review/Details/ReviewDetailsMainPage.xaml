<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MobileApp.ViewModels"
             xmlns:loc="clr-namespace:MobileApp.Localizations"
             x:Class="MobileApp.Pages.ReviewDetailsMainPage"
             x:DataType="vm:ReviewDetailsVM"
             BindingContext="{Binding ReviewDetailsVM, Source={RelativeSource Self}}"
             x:Name="this"
             Title="{loc:Translate txt_ReviewDetailsMainPageTitle}">

    <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
        <Label Text="{Binding ReviewTypeName}" HorizontalOptions="Center" />
        <Label Text="{Binding Description}" HorizontalOptions="Center"/>
        <CollectionView x:Name="ReviewDetailsCV" ItemsSource="{Binding DescriptionHiveReviewVMs}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}" SelectionMode="Single" SelectionChanged="ReviewDetailsCV_SelectionChanged" >
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:DescriptionHiveReviewVM">
                    <StackLayout Orientation="Horizontal" HorizontalOptions="EndAndExpand" BackgroundColor="{Binding IsSelected, Converter={StaticResource IsSelectedToColorConverter}}">
                        <Label Text="{Binding HiveName}" />
                        <Label Text="{Binding Description}" Margin="10,0,0,0"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
            <Button Text="&lt;" Command="{Binding OnLeft, Source={x:Reference this}}" CommandParameter="{Binding SelectedItem}" HorizontalOptions="Start"/>
            <StackLayout Orientation="Vertical" Padding="10" HorizontalOptions="FillAndExpand">
                <Label Text="{loc:Translate txt_Description}" HorizontalOptions="Center"/>
                <Entry Text="{Binding SelectedItem.Description}" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center"/>
                <Label Text="{loc:Translate txt_PhotoList}" HorizontalOptions="Center"/>
                <CollectionView x:Name="PhotoCV" ItemsSource="{Binding SelectedItem.Photos}" >
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="vm:PhotoVM">
                            <Grid Padding="5">
                                <!-- Zdjęcie -->
                                <Image Source="{Binding ImageData, Converter={StaticResource ByteArrayToImageSourceConverter}}" HeightRequest="300" />

                                <!-- Przycisk do usunięcia zdjęcia -->
                                <Button Text="{loc:Translate txt_Delete}"
                                    Command="{Binding DeletePhotoCommand, Source={x:Reference this}}"
                                    CommandParameter="{Binding .}"
                                    HorizontalOptions="End" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Button Text="{loc:Translate txt_TakePhoto}" Command="{Binding TakePhotoCommand, Source={x:Reference this}}" />
            </StackLayout>
            <Button Text=">" Command="{Binding OnRight, Source={x:Reference this}}" CommandParameter="{Binding SelectedItem}" HorizontalOptions="End" />
        </StackLayout>
        
        
        <Button Text="{loc:Translate txt_Save}" Command="{Binding OnSave, Source={x:Reference this}}" />
    </StackLayout>
        
</ContentPage>